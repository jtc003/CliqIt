  </div>

  {{#each tasks}}
  <div class = "container notification-box">
    <div class="row task1">
      <div class="left collapse-group">
        <h4 id="{{pin}}">{{taskName}}</h4>
        <p id="priority">
           <strong>Priority: </strong><span>{{priority}}</span>
        </p>
        <p id="date"> 
          <strong>Due Date: </strong><span>{{date}}</span> 
        </p>
        <p id="desc" class="collapse">
          <strong>Description: </strong><span>{{description}}</span>
        </p>
         <p><a class="btn-detail" href="#">View Details</a></p>
      </div>
        <input type="radio" id="complete" class="css-checkbox"><label for="complete" class="css-label radGroup1"> Completed</label>
        <a id ="remind" href="/remind" class="btn btn-default">Remind</a>
    </div>
  </div>
  {{/each}}

